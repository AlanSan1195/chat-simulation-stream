---
import '../styles/global.css';
import Fotter from '../components/Fotter.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Chat simulado para streamers principiantes" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo-rocket.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Precargar fuentes para evitar layout shifts -->
    <link rel="preload" href="/_astro/AlphaLyrae-Medium.CEZ2ssaz.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/_astro/JetBrainsMono-variable.D5KFAJfm.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Preconnect a Clerk para acelerar autenticaciÃ³n -->
    <link rel="preconnect" href="https://clerk.rocketchat.online" />
  </head>
  <body class="bg-secundary text-black min-h-screen">
    <div id="clerk-root">
      <slot />
    </div>

  </body>
</html>
