---
import Layout from '../layouts/Layout.astro';
import { SignedIn, SignedOut, UserButton } from '@clerk/astro/components';
import StreamerDashboard from '../components/StreamerDashboard';
import { IconLogout } from '@tabler/icons-react';
---

<Layout title="Dashboard - Rocket Chat Simulator">
  <SignedOut>
    <div class="min-h-screen bg-[#e8e4de] flex items-center justify-center">
      <div class="text-center space-y-4">
        <h1 class="text-3xl font-light text-black">Acceso Restringido</h1>
        <p class="text-black/60">Debes iniciar sesion para acceder al dashboard</p>
        <a href="/" class="inline-block bg-[#e07b5a] hover:bg-[#c96a4a] text-white font-medium py-2 px-6 rounded-md transition">
          Volver al inicio
        </a>
      </div>
    </div>
  </SignedOut>

  <SignedIn>
    <div class="min-h-screen bg-[#e8e4de] flex flex-col relative">
      <!-- Logout button top right -->
      <div class="absolute top-6 right-6 z-10">
        <UserButton />
      </div>

      <!-- Main Content -->
      <main class="flex-1 p-8 pt-6">
        <div class="max-w-7xl mx-auto">
          <StreamerDashboard client:only="react" />
        </div>
      </main>
    </div>
  </SignedIn>
</Layout>
