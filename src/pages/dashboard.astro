---
import Layout from "../layouts/Layout.astro";
import { SignedIn, SignedOut } from "@clerk/astro/components";
import StreamerDashboard from "../components/StreamerDashboard";
import Header from "../components/Header.astro";
---

<Layout
  title="Dashboard - Rocket Chat Simulator"
  description="Panel de control para simular chat de Twitch/YouTube. Configura tu stream de practica y genera comentarios realistas con IA."
  noindex={true}
>
  <SignedOut>
    <main
      class="min-h-screen bg-bg-secundary dark:bg-transparent flex items-center justify-center"
      role="main"
    >
      <article class="text-center space-y-4">
        <h1 class="text-3xl font-light text-black dark:text-white">Acceso Restringido</h1>
        <p class="text-black/60 dark:text-white/60">
          Debes iniciar sesion para acceder al dashboard
        </p>
        <a
          href="/"
          class="inline-block bg-primary hover:opacity-80 font-medium py-2 px-6 transition"
          style="color: var(--color-primary-text);"
          aria-label="Volver a la pagina principal"
        >
          Volver al inicio
        </a>
      </article>
    </main>
  </SignedOut>

  <SignedIn>
    <Header />
    <main class="flex px-4 lg:px-8 py-8" role="main">
      <div
        class="relative overflow-hidden max-w-7xl dark:shadow-none mx-auto h-full border-0 scanlines-bg  dark:bg-transparent backdrop-blur-sm p-4 sm:p-5  lg:flex lg:flex-col rounded-xs"
      >
        <!-- Grid decorativo con mask â€” solo dark mode -->
        <div class="hidden dark:block  absolute inset-0 z-0 grid-bg " aria-hidden="true"></div>


        <div class="relative z-10 flex flex-col   ">
          <StreamerDashboard client:only="react" />
        </div>
      </div>
    </main>
  </SignedIn>
</Layout>

<style>
    .scanlines-bg {
   border: .08px solid rgba(0, 0, 0, 0.350);
    pointer-events: none;
    background: repeating-linear-gradient(
      to bottom,
      transparent 0px,
      transparent 3px,
      rgba(0,0,0,0.012) 3px,
      rgba(0,0,0,0.015) 8px
    );
  }

  .grid-bg {
    background-image:
      linear-gradient(to right, var(--color-primary) 1px, transparent 1px),
      linear-gradient(to bottom, var(--color-primary) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: var(--grid-opacity, 0.35);
    -webkit-mask-image:
      repeating-linear-gradient(to right, black 0px, black 2px, transparent 3px, transparent 8px),
      repeating-linear-gradient(to bottom, black 0px, black 2px, transparent 3px, transparent 8px),
      radial-gradient(ellipse 80% 80% at 0% 0%, #000 50%, transparent 90%);
    mask-image:
      repeating-linear-gradient(to right, black 0px, black 2px, transparent 3px, transparent 8px),
      repeating-linear-gradient(to bottom, black 0px, black 2px, transparent 3px, transparent 8px),
      radial-gradient(ellipse 80% 80% at 0% 0%, #000 50%, transparent 90%);
    -webkit-mask-composite: source-in;
    mask-composite: intersect;
  }
</style>
