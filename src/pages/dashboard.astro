---
import Layout from "../layouts/Layout.astro";
import { SignedIn, SignedOut } from "@clerk/astro/components";
import StreamerDashboard from "../components/StreamerDashboard";
import Header from "../components/Header.astro";
---

<Layout
  title="Dashboard - Rocket Chat Simulator"
  description="Panel de control para simular chat de Twitch/YouTube. Configura tu stream de practica y genera comentarios realistas con IA."
  noindex={true}
>
  <SignedOut>
    <main
      class="min-h-screen bg-[#e8e4de] flex items-center justify-center"
      role="main"
    >
      <article class="text-center space-y-4">
        <h1 class="text-3xl font-light text-black">Acceso Restringido</h1>
        <p class="text-black/60">
          Debes iniciar sesion para acceder al dashboard
        </p>
        <a
          href="/"
          class="inline-block bg-[#9146FF] hover:bg-[#7b2fbe] text-white font-medium py-2 px-6 transition"
          aria-label="Volver a la pagina principal"
        >
          Volver al inicio
        </a>
      </article>
    </main>
  </SignedOut>

  <SignedIn>
    <Header />
    <main class="flex-1 px-4  lg:px-8 lg:py-8 " role="main">
      <div
        class="max-w-7xl  dark:shadow-none mx-auto min-h-screen border-0 bg-terminal/20 backdrop-blur-sm p-4 sm:p-6 lg:flex lg:flex-col rounded-xs "
      >
        <h1 class="sr-only">Panel de Control - Rocket Chat Simulator</h1>
        <StreamerDashboard client:only="react" />
      </div>
    </main>
  </SignedIn>
</Layout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
