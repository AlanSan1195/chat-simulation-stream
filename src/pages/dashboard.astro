---
import Layout from '../layouts/Layout.astro';
import { SignedIn, SignedOut } from '@clerk/astro/components';
import StreamerDashboard from '../components/StreamerDashboard';
import Header from '../components/Header.astro';
---

<Layout title="Dashboard - Rocket Chat Simulator">
  <SignedOut>
    <div class="min-h-screen bg-[#e8e4de] flex items-center justify-center">
      <div class="text-center space-y-4">
        <h1 class="text-3xl font-light text-black">Acceso Restringido</h1>
        <p class="text-black/60">Debes iniciar sesion para acceder al dashboard</p>
        <a href="/" class="inline-block bg-[#e07b5a] hover:bg-[#c96a4a] text-white font-medium py-2 px-6 rounded-md transition">
          Volver al inicio
        </a>
      </div>
    </div>
  </SignedOut>

  <SignedIn>
      <Header/>
      <!-- Main Content -->
    <main class="flex-1 p-8 pt-10 ">
      <div class="max-w-7xl mx-auto ">
        <StreamerDashboard client:only="react" />
      </div>
    </main>
  </SignedIn>
</Layout>
