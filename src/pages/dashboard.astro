---
import Layout from '../layouts/Layout.astro';
import { SignedIn, SignedOut, UserButton } from '@clerk/astro/components';
import StreamerDashboard from '../components/StreamerDashboard';
---

<Layout title="Dashboard - Chat Simulation Stream">
  <SignedOut>
    <div class="min-h-screen flex items-center justify-center">
      <div class="text-center space-y-4">
        <h1 class="text-3xl font-bold text-slate-300">Acceso Restringido</h1>
        <p class="text-slate-400">Debes iniciar sesi√≥n para acceder al dashboard</p>
        <a href="/" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-6 rounded-lg transition">
          Volver al inicio
        </a>
      </div>
    </div>
  </SignedOut>

  <SignedIn>
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="bg-slate-800 border-b border-slate-700 py-4 px-6">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent">
              Chat Simulation
            </h1>
          </div>
          <UserButton />
        </div>
      </header>

      <!-- Main Content -->
      <main class="flex-1 p-6">
        <div class="max-w-7xl mx-auto">
          <StreamerDashboard client:only="react" />
        </div>
      </main>
    </div>
  </SignedIn>
</Layout>
