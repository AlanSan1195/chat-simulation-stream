---
import Layout from '../layouts/Layout.astro';
import { SignedIn, SignedOut } from '@clerk/astro/components';
---

<Layout title="Rocket - Chat Simulator">
  <div class="min-h-screen bg-[#d4d4d4] flex flex-col items-center justify-center p-4">
    <div class="max-w-3xl w-full text-center space-y-8">
      <!-- Hero Section -->
      <div class="space-y-2">
        <h1 class="text-6xl md:text-8xl font-light tracking-tight text-black">
          Roc<span class="inline-block transform -translate-y-1">k</span>et
        </h1>
        <p class="text-3xl md:text-5xl font-light italic text-[#e07b5a] tracking-wide">
          Chat Simulator
        </p>
      </div>

      <!-- Description Box -->
      <div class="bg-[#2d2d2d] rounded-lg p-6 md:p-8 border-2 border-[#e07b5a] text-left">
        <p class="text-base md:text-lg text-[#d4d4d4] leading-relaxed font-mono">
          Practica con una audiencia simulada a tu gameplay y experimenta un stream de verdad
        </p>
      </div>

      <!-- CTA -->
      <div class="space-y-3">
        <SignedOut>
          <a 
            href="/sign-in"
            class="inline-block bg-[#e07b5a] hover:bg-[#c96a4a] text-white font-medium py-3 px-8 rounded-md text-base transition-all"
          >
            Comenzar Stream
          </a>
          <p class="text-sm text-black/70">
            Inicia sesion para ingresar al dashboard
          </p>
        </SignedOut>
        
        <SignedIn>
          <a 
            href="/dashboard" 
            class="inline-block bg-[#e07b5a] hover:bg-[#c96a4a] text-white font-medium py-3 px-8 rounded-md text-base transition-all"
          >
            Ir al Dashboard
          </a>
        </SignedIn>
      </div>
    </div>
  </div>
</>
